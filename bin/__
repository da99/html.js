#!/usr/bin/env bash
#
#
set -u -e -o pipefail


case "$*" in
  "-h"|"--help"|"help")
    echo "$0 -h|--help|help -- Show this message."
    echo "$0 build test"
    echo "$0 serve test"
    echo
    ;;
  "build test")
    set -x
    rm -rf build
    mkdir build
    bun build spec/test.js --outdir build
    ;;
  "serve test")
    set -x
    bun run --hot spec/serve.js
    ;;
  *)
    echo "!!! Unknown command: $*" >&2
    exit 1
    ;;
esac
